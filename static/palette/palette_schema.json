        "$schema": {
            "description": "This JSON schema.",
            "type": "string",
            "format": "uri"
        },
        "^[A-Z]+$": {
            "description": "A color object containing different shades.",
            "type": "object",
            "properties": {
                "DARK_4": {
                    "description": "4th dark shade of the color.",
                    "type": "object",
                    "hex": {
                        "type": "string",
                        "pattern": "^#[0-9A-Fa-f]{6}$"
                    },
                    "override": {
                        "type": "string"
                    },
                    "required": [
                        "hex"
                    ]
                },
